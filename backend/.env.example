# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/edupath

# JWT
JWT_SECRET=your_strong_random_secret_key

# AI Provider (gemini, mock)
AI_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key
MODEL_NAME=gemini-pro

# Rate Limiting
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX=60
CHAT_DAILY_LIMIT=30
RECOMMEND_DAILY_LIMIT=10

# Logging
LOG_LEVEL=info

# Prompts
PROMPT_VERSION_RECOMMEND=recommendation.v1
PROMPT_VERSION_CHAT=chat.v1

# Caching
CACHE_PROFILE_TTL_MIN=1440

# CORS
CORS_ORIGIN=http://localhost:5173
